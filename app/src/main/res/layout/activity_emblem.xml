<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/emblem"
        android:layout_width="271dp"
        android:layout_height="191dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/cjnvert"/>

    <TextView
        android:id="@+id/splash_subtitle"
        android:fontFamily="@font/zhimangxing_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="koWum4a"
        android:textSize="48sp"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emblem"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/splash_subtitle1"
        android:fontFamily="@font/oldstandardtt_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кош Келдиниз!"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_subtitle"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/splash_subtitle2"
        android:fontFamily="@font/oldstandardtt_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ким канча бергенин
                                Кимге канча бергенинизди,
                   эч качан унутпайсыз"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_subtitle1"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="174dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@+id/splash_subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="98dp"
        android:layout_marginStart="98dp"
        android:text="Баштоо"
        android:background="@drawable/next"/>

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:padding="14dp"
        android:text="Тил тандоо?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:textColor="@color/teal_700" />

</androidx.constraintlayout.widget.ConstraintLayout>