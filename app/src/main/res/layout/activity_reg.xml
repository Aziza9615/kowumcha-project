<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/reg_text_view"
        android:layout_width="194dp"
        android:layout_height="36dp"
        android:text="Регистрация"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:hint="Имя"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg_text_view"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:hint="Номер телефона"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:hint="Выберите пароль"
        android:padding="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_replay"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:hint="Повторите пароль"
        android:padding="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_qest"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:hint="Выберите секретный вопрос"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_replay"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:hint="Ответ на секретный вопрос"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_qest"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="320dp"
        android:layout_height="13dp"
        android:text="Я согласен с условиями обработки персональных данных"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="53dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_answer" />

    <ImageButton
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="@+id/et_answer"
        app:layout_constraintTop_toBottomOf="@+id/et_answer"
        android:background="@drawable/ic_vector__stroke_"/>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="47dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="14dp"
        android:text="Далее"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="311dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reg"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:paddingStart="70dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/green_primary"
        android:text="Уже зарегестрированны?"/>

</androidx.constraintlayout.widget.ConstraintLayout>