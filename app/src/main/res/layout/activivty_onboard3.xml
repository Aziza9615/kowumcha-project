<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginTop="44dp"
        android:layout_marginStart="18dp"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="309dp"
        android:layout_height="263dp"
        android:src="@mipmap/pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="131dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tv_onBoard"
        android:layout_width="245dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Воспользуйтесь удобной аналитикой"
        android:textSize="16sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/tv_onBoard2"
        android:layout_width="285dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_onBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Вы сможете посмотреть приход и расход денег по праздникам или за период"
        android:textSize="14sp"
        android:fontFamily="@font/roboo"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"/>

    <Button
        android:id="@+id/further_btn3"
        android:layout_width="320dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onBoard2"
        android:background="@drawable/button"
        android:text="Далее"
        android:textColor="@color/brand"
        android:textSize="14sp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>