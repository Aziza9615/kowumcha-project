<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="350dp"
        android:layout_height="265dp"
        android:src="@drawable/bissunes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="104dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tv_onBoard"
        android:layout_width="255dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="Дарите столько, сколько подарили вам"
        android:textSize="18sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="12dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/tv_onBoard2"
        android:layout_width="290dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_onBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="В приложении вы легко найдете вашего близкого человека и его сумму подарка"
        android:textSize="14sp"
        android:fontFamily="@font/roboo"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>