<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list">

    <TextView
        android:id="@+id/svs_txt"
        android:layout_width="328dp"
        android:layout_height="24dp"
        android:text="Свадьба"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="52dp"/>

    <ImageView
        android:id="@+id/iv_svs"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_forward"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/svs_txt"
        app:layout_constraintEnd_toEndOf="@+id/svs_txt"/>

    <View
        android:id="@+id/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/svs_txt" />

    <TextView
        android:id="@+id/kyz_txt"
        android:layout_width="328dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:text="Кыз узатуу"
        android:textColor="@color/Label_Primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gray_line" />

    <ImageView
        android:id="@+id/iv_kyz"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_forward"
        app:layout_constraintTop_toBottomOf="@+id/gray_line"
        app:layout_constraintStart_toEndOf="@id/svs_txt"
        app:layout_constraintEnd_toEndOf="@+id/svs_txt"/>

    <View
        android:id="@+id/gray_line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/kyz_txt" />

    <TextView
        android:id="@+id/birth"
        android:layout_width="328dp"
        android:layout_height="24dp"
        android:text="Рождение ребенка"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toBottomOf="@+id/gray_line0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="52dp"/>

    <ImageView
        android:id="@+id/iv_birth"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_forward"
        app:layout_constraintTop_toBottomOf="@+id/gray_line0"
        app:layout_constraintStart_toEndOf="@id/svs_txt"
        app:layout_constraintEnd_toEndOf="@+id/svs_txt"/>

    <View
        android:id="@+id/gray_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/birth" />

    <TextView
        android:id="@+id/Anniversary"
        android:layout_width="328dp"
        android:layout_height="24dp"
        android:text="Юбилей"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toBottomOf="@+id/gray_line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="52dp"/>

    <ImageView
        android:id="@+id/iv_anniversay"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_forward"
        app:layout_constraintTop_toBottomOf="@+id/gray_line1"
        app:layout_constraintStart_toEndOf="@id/svs_txt"
        app:layout_constraintEnd_toEndOf="@+id/svs_txt"/>

    <View
        android:id="@+id/gray_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/Anniversary" />

    <TextView
        android:id="@+id/happy"
        android:layout_width="328dp"
        android:layout_height="24dp"
        android:text="День рождения"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toBottomOf="@+id/gray_line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="52dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>