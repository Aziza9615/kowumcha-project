<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_fr">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/emblem"
        android:layout_width="200dp"
        android:layout_height="191dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/konvert"/>

    <TextView
        android:id="@+id/splash_subtitle"
        android:fontFamily="@font/yesteryear_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kowum4a"
        android:textSize="48sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emblem"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/splash_subtitle1"
        android:fontFamily="@font/oldstandardtt_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_subtitle"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/splash_subtitle2"
        android:fontFamily="@font/oldstandardtt_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hi"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_subtitle1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="230dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/splash_subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="98dp"
        android:layout_marginStart="98dp"
        android:text="@string/next1"
        android:background="@drawable/next"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/language"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:textSize="12dp"
        android:textStyle="normal"
        android:text="Выбрать язык"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>