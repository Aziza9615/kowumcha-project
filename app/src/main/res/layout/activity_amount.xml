<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_arrow_left"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сумманы Киргизиниз"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textColor="@color/teal_700"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="50dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/amount_ev"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/amount_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="14dp"
        android:textStyle="bold"
        android:text="@string/choosecurrecy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_ev"
        android:textColor="@color/teal_700" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@+id/currency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="98dp"
        android:layout_marginStart="98dp"
        android:text="@string/add"
        android:textStyle="bold"
        android:background="@drawable/add"/>

    <Button
        android:id="@+id/btn_next_amount"
        android:layout_width="174dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@+id/add_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="98dp"
        android:layout_marginStart="98dp"
        android:text="@string/done"
        android:textStyle="bold"
        android:background="@drawable/next"/>

</androidx.constraintlayout.widget.ConstraintLayout>