<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Chooselanguage">

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/language"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/Delete">

        <PreferenceScreen
            app:key="delete"
            app:title="@string/delete"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/Theme">

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme" />

    </PreferenceCategory>

</PreferenceScreen>
